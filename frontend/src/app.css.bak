@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full overflow-hidden;
}

/* ========================================
   LIGHT MODE (Orange/Off-White Theme)
   ======================================== */

/* Body background with sophisticated radial gradient mesh */
body {
	background:
		radial-gradient(circle at 100% 0%, rgba(255, 160, 100, 0.4) 0%, rgba(255, 160, 100, 0.25) 33%, transparent 67%),
		radial-gradient(circle at 0% 0%, rgba(255, 140, 66, 0.3) 0%, rgba(255, 140, 66, 0.18) 33%, transparent 67%),
		radial-gradient(circle at 100% 100%, rgba(237, 125, 49, 0.25) 0%, rgba(237, 125, 49, 0.13) 33%, transparent 67%),
		radial-gradient(circle at 0% 100%, rgba(250, 200, 150, 0.28) 0%, rgba(250, 200, 150, 0.15) 33%, transparent 67%),
		linear-gradient(135deg, #f5f0eb 0%, #ede8e0 100%) !important;
	min-height: 100vh;
	transition: background 0.3s ease;
}

/* Override Skeleton AppShell background */
#page,
.app-shell,
[data-shell] {
	background: transparent !important;
}

/* Card styling with gradient */
.card {
	background: linear-gradient(135deg, #ffffff 0%, #fefdfb 100%);
	border: 1px solid #f0e6d2;
	box-shadow: 0 2px 8px rgba(237, 125, 49, 0.08);
	transition: all 0.3s ease;
}

.card:hover {
	box-shadow: 0 4px 16px rgba(237, 125, 49, 0.15);
}

/* Primary buttons - Orange */
.btn.variant-filled-primary {
	background: linear-gradient(135deg, #ff8c42 0%, #ed7d31 100%);
	border: none;
	color: white;
	font-weight: 600;
	transition: all 0.3s ease;
}

.btn.variant-filled-primary:hover {
	background: linear-gradient(135deg, #ff9d5c 0%, #ff8c42 100%);
	box-shadow: 0 4px 12px rgba(237, 125, 49, 0.3);
}

.btn.variant-filled-secondary {
	background: linear-gradient(135deg, #ffa366 0%, #ff8c42 100%);
	border: none;
	color: white;
	font-weight: 500;
}

.btn.variant-filled-secondary:hover {
	background: linear-gradient(135deg, #ffb380 0%, #ffa366 100%);
}

.btn.variant-filled-error {
	background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
}

.btn.variant-filled-error:hover {
	background: linear-gradient(135deg, #e04555 0%, #dc3545 100%);
}

.btn.variant-ghost-surface {
	background: transparent;
	border: 2px solid #e8dcc8;
	color: #5a4a3a;
}

.btn.variant-ghost-surface:hover {
	background: #faf8f5;
	border-color: #d4c4a8;
}

/* Form inputs - improved padding and styling */
.input,
.textarea,
.select,
select {
	padding: 0.75rem 1rem !important;
	border: 2px solid #e8dcc8;
	border-radius: 8px;
	background: #fefdfb;
	transition: all 0.2s ease;
	font-size: 0.95rem;
}

.input:focus,
.textarea:focus,
.select:focus,
select:focus {
	border-color: #ff8c42;
	outline: none;
	box-shadow: 0 0 0 3px rgba(255, 140, 66, 0.1);
	background: white;
}

/* Special handling for number inputs */
input[type='number'] {
	padding-left: 1rem !important;
	padding-right: 1rem !important;
}

/* Checkbox styling */
.checkbox,
input[type='checkbox'] {
	width: 1.25rem;
	height: 1.25rem;
	border: 2px solid #e8dcc8;
	border-radius: 4px;
	cursor: pointer;
}

/* Badge styling */
.badge {
	background: linear-gradient(135deg, #fff5eb 0%, #ffe8d6 100%);
	color: #ed7d31;
	border: 1px solid #ffd9b3;
	font-weight: 600;
	padding: 0.25rem 0.75rem;
}

/* Headings */
.h1,
.h2,
.h3 {
	color: #2c2416;
	font-weight: 700;
}

/* Status/Preview boxes with gradient */
.bg-surface-100-800-token {
	background: linear-gradient(135deg, #fff8f0 0%, #fff0e0 100%) !important;
	border: 1px solid #ffe0c2 !important;
	color: #8b5a2b !important;
}

/* ========================================
   DARK MODE (Dark Green Theme)
   ======================================== */

.dark body {
	background:
		radial-gradient(circle at 0% 100%, rgba(5, 10, 5, 1) 0%, rgba(5, 10, 5, 0.7) 33%, transparent 67%),
		radial-gradient(circle at 0% 0%, rgba(8, 15, 8, 0.9) 0%, rgba(8, 15, 8, 0.6) 33%, transparent 67%),
		radial-gradient(circle at 100% 0%, rgba(10, 18, 10, 0.85) 0%, rgba(10, 18, 10, 0.55) 33%, transparent 67%),
		radial-gradient(circle at 100% 100%, rgba(12, 22, 12, 0.8) 0%, rgba(12, 22, 12, 0.5) 33%, transparent 67%),
		linear-gradient(135deg, #0a150a 0%, #1a2f1a 100%) !important;
}

.dark .card {
	background: linear-gradient(135deg, #1e3a1e 0%, #1a321a 100%);
	border: 1px solid #2d4a2d;
	box-shadow: 0 2px 8px rgba(34, 139, 34, 0.15);
}

.dark .card:hover {
	box-shadow: 0 4px 16px rgba(34, 139, 34, 0.25);
}

/* Primary buttons - Green */
.dark .btn.variant-filled-primary {
	background: linear-gradient(135deg, #3da83d 0%, #2d8b2d 100%);
	color: white;
}

.dark .btn.variant-filled-primary:hover {
	background: linear-gradient(135deg, #4dbd4d 0%, #3da83d 100%);
	box-shadow: 0 4px 12px rgba(34, 139, 34, 0.4);
}

.dark .btn.variant-filled-secondary {
	background: linear-gradient(135deg, #4dbd4d 0%, #3da83d 100%);
}

.dark .btn.variant-filled-secondary:hover {
	background: linear-gradient(135deg, #5dd35d 0%, #4dbd4d 100%);
}

.dark .btn.variant-filled-error {
	background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
}

.dark .btn.variant-filled-error:hover {
	background: linear-gradient(135deg, #e04555 0%, #dc3545 100%);
}

.dark .btn.variant-ghost-surface {
	background: transparent;
	border: 2px solid #2d4a2d;
	color: #a8d5a8;
}

.dark .btn.variant-ghost-surface:hover {
	background: #1e3a1e;
	border-color: #3d5a3d;
}

/* Form inputs - dark mode */
.dark .input,
.dark .textarea,
.dark .select,
.dark select {
	padding: 0.75rem 1rem !important;
	border: 2px solid #2d4a2d;
	border-radius: 8px;
	background: #1e3a1e;
	color: #d4ead4;
	transition: all 0.2s ease;
}

.dark .input:focus,
.dark .textarea:focus,
.dark .select:focus,
.dark select:focus {
	border-color: #3da83d;
	outline: none;
	box-shadow: 0 0 0 3px rgba(61, 168, 61, 0.2);
	background: #253f25;
}

.dark .checkbox,
.dark input[type='checkbox'] {
	border: 2px solid #2d4a2d;
	background: #1e3a1e;
}

/* Badge styling - dark mode */
.dark .badge {
	background: linear-gradient(135deg, #2d4a2d 0%, #253f25 100%);
	color: #7dd37d;
	border: 1px solid #3d5a3d;
}

/* Headings - dark mode */
.dark .h1,
.dark .h2,
.dark .h3 {
	color: #d4ead4;
}

/* Status/Preview boxes - dark mode */
.dark .bg-surface-100-800-token {
	background: linear-gradient(135deg, #253f25 0%, #1e3a1e 100%) !important;
	border: 1px solid #3d5a3d !important;
	color: #a8d5a8 !important;
}

/* Text colors - dark mode */
.dark .text-surface-500 {
	color: #8db98d !important;
}

.dark .text-surface-600-300-token {
	color: #a8d5a8 !important;
}
